@{
    Layout = Layout = "~/Views/Shared/_Layout.cshtml"; ;
}


<script>
    $(function () {
        $("#calendar").datepicker();
    });
</script>


<div>
    
    <form id="rgstrn" action="/Account/SignUp1" method="post" style="height: auto;width:600px;border: 1px solid #BBBBBB;margin-left: 50px;margin-top: 20px">         
     
        <table border="0" style="width:auto" style="margin-top: 50px">
            <!--usrname-->
             
            <tr style="height: 30px">
               <td><div id="checking">Checking...</div></td>
                </tr>
            <tr style="height: 30px">
                <td style="text-align: right;font-size:15px">Email ID</td>
                <td><input type="text" name="email" id="email" style="height: 30px;width: 250px;margin-left: 10px"/></td>
                <td style="width: auto"><span style="font-family: Calibri; color: #218416; text-align: center"> <span class="field-validation-valid" data-valmsg-for="uname" data-valmsg-replace="true"></span></span> </td>
               
                 
            
              <td colspan="3"><input type="button" id="b1" value="Check" style="height: 30px;border-color:black";width: 100px;margin-left: 10px;font-size: 20px"/></button>
               <div id="result"></div>
                   @Scripts.Render("~/bundles/jquery")
                   </td>
            </tr>

            <!--dob-->
            <tr style="height: 30px">
                <td style="text-align: right;font-size:15px">Date of birth (DD/MM/YY)</td>
                <td><input type="text" name="dob" id="calender" style="height: 30px;width: 250px;margin-left: 10px"/></td>
                <td><span style="font-family: Calibri; color: #218416; text-align: center"><span class="field-validation-valid" data-valmsg-for="dob" data-valmsg-replace="true"></span></span> </td>
            </tr>
            <!--Age-->

            <tr style="height: 30px">
                <td style="text-align: right;font-size:15px">Age  </td>
                <td><input type="text" name="age" id="age" style="height: 30px;width: 250px;margin-left: 10px"/></td>
                <td><span style="font-family: Calibri; color: #218416; text-align: center"><span class="field-validation-valid" data-valmsg-for="age" data-valmsg-replace="true"></span></span> </td>
            </tr>

            <!--Gender-->
            <tr style="height: 30px">
                <td style="text-align: right;font-size:15px">Gender </td>
              
                <td> &nbsp<input type="radio" name="gen" id="gen" value="male"/>&nbsp; Male
                    <input type="radio" name="gen" checked="checked" value="female" />Female    <br />  
                </td>
                <td></td>
            </tr>
            <!--Email Id-->
            <tr style="height: 30px">
                <td style="text-align: right;font-size:15px">UserName</td>
                <td><input type="text" name="uname" id="uname" style="height: 30px;width: 250px;margin-left: 10px"/></td>
                <td><span style="font-family: Calibri; color: #218416; text-align: center"><span class="field-validation-valid" data-valmsg-for="email" data-valmsg-replace="true"></span></span> </td>
            </tr>
            <!--Password-->
            <tr style="height: 30px">
                <td style="text-align: right;font-size:15px">Password  </td>
                <td><input type="password" name="password" id="password" style="height: 30px;width: 250px;margin-left: 10px;font-size:15px"/></td>
                <td><span style="font-family: Calibri; color: #218416; text-align: center; font-size:15px"><span class="field-validation-valid" data-valmsg-for="password" data-valmsg-replace="true"></span></span> </td>
            </tr>
        
            <tr style="height: 30px">
              <td colspan="3"><button style="color:blue; margin-left:150px""><input type="submit" id="butt1" value="Sign Up" style="height: 30px;color:black;width: 100px;margin-left: 10px;font-size: 20px"/></button>
              </td>
            </tr>
        </table>
     </form>
     
    <script src="~/Scripts/jquery-1.8.2.js"></script>

        <style type="text/css">
        .green
        {
            color: Green;
        }
        .red
        {
            color: Red;
        }
    </style>
           <script>

               $(document).ready(function () {

                   $('#checking').hide();

                   $('#b1').click(function () {

                       var userName = $('#email').val();

                       //alert('User Name ='+ userName);
                       $('#checking').show();
                       $.getJSON("/Account/CheckUserName?email=" + userName, function (data) {
                           $('#checking').hide();
                           if (data == true) {
                               $('#result').html("User already exists in database").addClass(red);

                           }
                           else {
                               $('#result').html("User Name is available").addClass(green);
                           }
                       });

                   });

               });
    </script>
</div>
   
  


           
